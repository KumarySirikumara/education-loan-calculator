<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/app_bar_container"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/custom_mini_app_bar">
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                android:background="?android:attr/selectableItemBackground">

            </ImageButton>
            <TextView
                android:id="@+id/appBarName"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_result_app_bar"
                android:textAllCaps="true"
                android:textSize="22sp"
                android:autoSizeTextType="uniform"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar_container">
            <RelativeLayout
                android:id="@+id/result_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:id="@+id/result_container_card"
                    android:background="@drawable/custom_app_bar">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/paymentOverviewText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/paymentOverview"
                            android:textSize="18dp"
                            android:layout_marginTop="5dp">

                        </TextView>
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/resultChart"
                            android:layout_below="@+id/paymentOverviewText"
                            android:layout_height="350dp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <GridLayout
                    android:layout_below="@+id/result_container_card"
                    android:id="@+id/grid_container"
                    android:columnCount="3"
                    android:rowCount="1"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/totalInterestCard"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_interest_amount">

                            </ImageView>
                            <TextView
                                android:layout_marginTop="12dp"
                                android:textSize="18sp"
                                android:text="@string/totalInterest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"/>
                            <TextView
                                android:id="@+id/totalInterest"
                                android:layout_marginTop="12dp"
                                android:textSize="15sp"
                                android:text="0.00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/play_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/loanAmountCard"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_loan_amount">

                            </ImageView>
                            <TextView
                                android:layout_marginTop="12dp"
                                android:textSize="18sp"
                                android:text="@string/loanAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"/>
                            <TextView
                                android:id="@+id/loanAmount"
                                android:layout_marginTop="12dp"
                                android:textSize="15sp"
                                android:text="0.00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/play_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/paymentAmountCard"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_payment">

                            </ImageView>
                            <TextView
                                android:layout_marginTop="12dp"
                                android:textSize="18sp"
                                android:text="@string/totalPayment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"/>
                            <TextView
                                android:id="@+id/totalPayment"
                                android:layout_marginTop="12dp"
                                android:textSize="15sp"
                                android:text="0.00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/play_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <RelativeLayout
                    android:layout_below="@+id/grid_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="200dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/loanDetailsCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="12dp"
                        android:layout_marginBottom="200dp">
                        <RelativeLayout
                            android:layout_below="@+id/paymentPerContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Per"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:textSize="20dp">
                            </TextView>

                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/paymentPerSpinner"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginLeft="220dp"
                                android:layout_centerInParent="true"/>

                            <TextView
                                android:id="@+id/paymentPer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/play_bold"
                                android:layout_marginRight="12dp"
                                android:textSize="20dp"
                                android:textColor="@color/red">
                            </TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/loanDetailsContainer"
                            android:layout_below="@+id/paymentPerContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="80dp"
                            android:layout_marginBottom="20dp">
                            <TextView
                                android:id="@+id/interestRateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/interest_rate_text"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:textSize="20dp">
                            </TextView>
                            <TextView
                                android:id="@+id/interestRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100.0%"
                                android:layout_marginLeft="186dp"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/play_bold"
                                android:textSize="17dp">
                            </TextView>
                            <TextView
                                android:id="@+id/ratePer"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="MONTHLY"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/play_bold"
                                android:layout_marginRight="12dp"
                                android:textSize="17dp">
                            </TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/loanDetailsContainer2"
                            android:layout_below="@+id/loanDetailsContainer1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="115dp"
                            android:layout_marginBottom="20dp">
                            <TextView
                                android:id="@+id/loanTermText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loan_term"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:textSize="20dp">
                            </TextView>
                            <TextView
                                android:id="@+id/loanTerm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:layout_marginLeft="186dp"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/play_bold"
                                android:layout_marginRight="12dp"
                                android:textAlignment="center"
                                android:textSize="17dp">
                            </TextView>
                            <TextView
                                android:id="@+id/termPeriod"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="YEARS"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/play_bold"
                                android:layout_marginRight="12dp"
                                android:textSize="17dp">
                            </TextView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/footer_text_kumary"
                    android:gravity="center"
                    android:paddingBottom="10dp">

                </TextView>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>